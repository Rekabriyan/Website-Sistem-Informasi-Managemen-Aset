generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int     @id @default(autoincrement())
  username        String  @unique
  password        String
  role            String
  lokasi_pengguna String
  jabatan         String
}

model Asset {
  id                        Int     @id @default(autoincrement())
  kode_asset                String  @unique
  nama_asset                String
  aspek_legal               String
  jenis_asset               String
  jumlah_asset              Int
  spesifikasi_asset         String
  harga_asset               Float
  kondisi_asset             String
  status_ketersediaan       String
  lokasi_asset              String
  tanggal_pembelian         DateTime
  asal_usul_perolehan       String
  keterangan                String
}

model req_asset {
  id                        Int     @id @default(autoincrement())
  no_permintaan             String  
  user_request              Int
  jenis_permintaan          String
  durasi                    Int
  status_permintaan         String
  id_asset                  Int
  tanggal_permintaan        DateTime
}

model history_asset {
  id                        Int     @id @default(autoincrement())
  nama_penerima             String  
  user_id                   Int
  lokasi_lama               String
  lokasi_baru               String
  id_asset                  Int
  tanggal                   DateTime
}

model peminjaman_asset {
  id                        Int     @id @default(autoincrement())
  mutasi_id                 String  
  user_id                   Int
  lokasi_departement        String
  id_asset                  Int
  tanggal                   DateTime
}

model mutasi_asset {
  id                        Int     @id @default(autoincrement())
  user_id                   Int
  lokasi_departement        String
  id_asset                  Int
  tanggal                   DateTime
}

model laporan {
  id                        Int     @id @default(autoincrement())
  kode_asset                Int
  nama_asset                String
  jumlah_asset              Int
  jenis_asset               String
  nomor_register            String
  jumlah_harga              Int    
}